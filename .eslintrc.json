{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {},
    "overrides": [
        {
            "files": [
                "**.js", "*.ts"
            ],
            "rules": {
                "@typescript-eslint/quotes": ["error", "double"],
                "@typescript-eslint/no-extraneous-class": "off"
            }
        }
    ]
}